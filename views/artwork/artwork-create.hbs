      <h2 class="artwork-create-heading">Submit Your Artwork</h2>
<section class="create">
  <div class="container-lg">


    <div class="row justify-content-center my-5">

      <div class="col-lg-6 ">
        <form action="/artwork/create" method="POST" enctype="multipart/form-data">

          <label for="" class="form-label">Title of Artwork:</label>
          <input type="text" class="form-control" id="title" name="title">

          <label for="" class="form-label mt-3">Artist:</label>
          <input type="text" class="form-control" id="title" name="artist">

          <label for="" class="form-label mt-3">Date</label>
          <input type="date" class="form-control datepicker" id="datepicker" name="datepicker">

          <div class="form-floating mb-4 mt-3">
            <textarea id="" class="form-control" style="height: 100px" name="description"></textarea>
            <label for="description">Description:</label>
          </div>

         
           <div class="row justify-content-center my-5">
          <div class="row justify-content-center col-lg-8">

             <label class="btn btn-primary create-button col-lg-12" for="artworkPictureUrl">
            <input type="file" name="artworkPictureUrl" id="artworkPictureUrl" placeholder="Add artwork cover"
              required />
            <span>
              Add an Artwork Image
            </span>
          </label>
            <button type="submit" class="btn btn-primary create-button" >Submit</button> 
            </div>
            <br>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>