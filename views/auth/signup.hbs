<div class="full-body-login">
<div class="login-form">
   <h2 class="logsign-title"> Create Account </h2>
<form action="/auth/signup" method="POST">
<div class="labels-div">
   <label> <p>Username</p>
      <input type="text" name="username">
   </label>
   <label> <p>Password</p>
      <input type="password" name="password" autofocus="autofocus" placeholder="At least 6 characters">
   </label>
   <button type="submit">Sign Up</button>
   </div>
</form>
</div>
</div>

{{#if errorMessage}}
   {{errorMessage}}
{{/if}}